<div class="show-photo">
  <a href="/photos/<%= photo.id %>"><img src="<%= photo.url %>"></a>

  <div class="photo-title">
    <%= photo.title %>
    <% if photo.user_id == current_user.id %>
      <a class="edit-title" href="/photos/<%= photo.id %>/edit">Edit Title</a>
    <% end %>
  </div>

  <div class="photo-user">
    <a href="/user/<%= photo.user.id %>"><%= photo.user.name %></a>
  </div>

  <div class="like-count">
    This photo has <span><%= photo.users_liked.count %></span> likes.
  </div>

  <div class="like-button">
    <form class="like" action="/like" method="post">
      <input type="hidden" name="photo_id" value="<%= photo.id %>">
      <input type="submit" value="Like!">
    </form>
  </div>

</div>
